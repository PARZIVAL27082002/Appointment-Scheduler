@inject Microsoft.AspNetCore.Identity.SignInManager<AppointmentScheduling.Models.ApplicationUser> signinManager
@if (signinManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="Logoff" asp-controller="Account">
        <ul class="nav nav-navbar">
            <li class="text-white nav-link">Hello, @User.Identity.Name</li>
            <li><a class="text-white nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    </form>

}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">@*@Html.ActionLink("Sign up", "Register", "Account", routeValues:null, htmlAttributes:new{id="registerLink"})*@
                <a class="nav-link text-white" id="registerLink" asp-action="Register" asp-controller="Account">Sign up</a>
        </li>
         <li class="nav-item">@*@Html.ActionLink("Log in", "Login", "Account", routeValues:null, htmlAttributes:new{id="loginLink"})*@
             <a class="nav-link text-white" id="loginLink" asp-action="Login" asp-controller="Account">Login</a></li>
    </ul>
}
